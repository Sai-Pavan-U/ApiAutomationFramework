{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "ConfigManagerPractice",
            "request": "launch",
            "mainClass": "com.api.utils.ConfigManagerPractice",
            "projectName": "ApiAutomationFramework"
        },
        {
            "type": "java",
            "name": "AuthTokenProvider",
            "request": "launch",
            "mainClass": "com.api.utils.AuthTokenProvider",
            "projectName": "ApiAutomationFramework"
        },
        {
            "type": "java",
            "name": "Run Current Test Class",
            "request": "launch",
            "mainClass": "org.testng.TestNG",
            "args": [
                "${file}"
            ],
            "projectName": "ApiAutomationFramework",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopOnEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "java",
            "name": "Run LoginAPITest",
            "request": "launch",
            "mainClass": "org.testng.TestNG",
            "args": [
                "-testclass",
                "com.api.tests.LoginAPITest"
            ],
            "projectName": "ApiAutomationFramework",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopOnEntry": false
        },
        {
            "type": "java",
            "name": "Run UserDetailsAPITest",
            "request": "launch",
            "mainClass": "org.testng.TestNG",
            "args": [
                "-testclass",
                "com.api.tests.UserDetailsAPITest"
            ],
            "projectName": "ApiAutomationFramework",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopOnEntry": false
        },
        {
            "type": "java",
            "name": "Debug Current Test",
            "request": "launch",
            "mainClass": "org.testng.TestNG",
            "args": [
                "${file}"
            ],
            "projectName": "ApiAutomationFramework",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopOnEntry": true
        }
    ]
}
