<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ApiAutomationFramework</groupId>
  <artifactId>ApiAutomationFramework</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <properties>
    <!-- Default TestNG suite file - can be overridden via -DSuiteXmlFile=filename.xml -->
    <SuiteXmlFile>testng.xml</SuiteXmlFile>

    <maven.compiler.source>17</maven.compiler.source>
    <maven.compiler.target>17</maven.compiler.target>
		<!-- Set project encoding to avoid warnings -->
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
	</properties>
  
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>3.5.4</version>
        <configuration>
            <!-- Dynamic TestNG XML suite file - supports multiple formats -->
            <suiteXmlFiles>
                <suiteXmlFile>src/test/resources/${SuiteXmlFile}</suiteXmlFile>
            </suiteXmlFiles>
            
            <!-- Enable system properties to be passed to test execution -->
            <systemPropertyVariables>
                <env>${env}</env>
            </systemPropertyVariables>
        </configuration>
      </plugin>
    </plugins>

  </build>


